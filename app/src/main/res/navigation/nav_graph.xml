<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fr_configuration">

    <fragment
        android:id="@+id/fr_configuration"
        android:name="com.ama.configuration.ConfigurationFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_configuration">
        <action
            android:id="@+id/open_location_fragment"
            app:destination="@id/fr_location" />
    </fragment>

    <fragment
        android:id="@+id/fr_location"
        android:name="com.ama.location.view.LocationFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_location">
        <argument
            android:name="configuration_id"
            app:argType="string" />
    </fragment>
</navigation>